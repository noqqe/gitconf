# vim: ft=gitconfig

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "diff"]
  meta = yellow bold
  frag = magenta
  plain = white
  old = red bold
  new = green bold
  commit = yellow bold
  func = green dim

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
